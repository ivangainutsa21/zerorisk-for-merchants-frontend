{{#unless isInFullPageRoute}}
	{{pg-sidebar}}
{{/unless}}
<!-- START PAGE-CONTAINER -->
<div class="{{if isInFullPageRoute 'full-page-wrapper' 'page-container'}}">
	{{#unless isInFullPageRoute}}
	  <!-- START PAGE HEADER WRAPPER -->
	  <!-- START HEADER -->
	  <div class="header">
	    <!-- START MOBILE CONTROLS -->
	    <!-- LEFT SIDE -->
	    <div class="pull-left full-height visible-sm visible-xs">
	      <!-- START ACTION BAR -->
	      <div class="sm-action-bar">
	        <a href="#" class="btn-link toggle-sidebar" data-toggle="sidebar">
	          <span class="icon-set menu-hambuger"></span>
	        </a>
	      </div>
	      <!-- END ACTION BAR -->
	    </div>
	    <!-- RIGHT SIDE -->

	    <!-- END MOBILE CONTROLS -->
	    <div class="pull-left sm-table">
	      <div class="header-inner">
	        <div class="brand inline p-l-50">
						<a href="{{href-to 'dashboard'}}">
	          	<img src="assets/img/logo.png" alt="logo" data-src="assets/img/logo.png" data-src-retina="assets/img/logo.png" height="28">
						</a>
	        </div>
	        {{notifications-dropdown notifications=model.notifications}}
					{{log model.notifications}}
	      </div>
	    </div>
	    <div class="pull-right">
	      <!-- START User Info-->
	      <div class="visible-lg visible-md m-t-10">
	        <div class="pull-left p-r-10 p-t-10 fs-16 font-heading">
	          <span class="hint-text">{{currentUser.fullName}}</span> {{!-- <span class="text-master">Nest</span> --}}
	        </div>
	        <div class="pull-right">
						{{#basic-dropdown horizontalPosition="right" as |dropdown|}}
							<ul role="menu" class="m-b-0" style="width: 150px;">
							  <li><a href="#"><i class="pg-settings_small"></i> Settings</a></li>
							  <li><a href="#"><i class="pg-outdent"></i> Feedback</a></li>
							  <li><a href="#"><i class="pg-signals"></i> Help</a></li>
							  <li class="bg-master-lighter" style="padding: 5px 22px;">
							    <a {{action "logout" target=session}}>
							      <span class="pull-left">Logout</span>
							      <span class="pull-right"><i class="pg-power"></i></span>
							    </a>
							  </li>
							</ul>
						{{else}}
							<button class="profile-dropdown-toggle" type="button" aria-haspopup="true" aria-expanded="false">
								<span class="fa-stack fa-lg hint-text">
									<i class="fa fa-circle fa-stack-2x" style="line-height: 36px; color: #353535; font-size: 33px;"></i>
									<i class="fa fa-user fa-stack-1x fa-inverse" style="font-size: 15px; line-height: 33px;"></i>
								</span>
							</button>
						{{/basic-dropdown}}
	        </div>
	      </div>
	      <!-- END User Info-->
	    </div>
	  </div>
	  <!-- END HEADER -->
	  <!-- END PAGE HEADER WRAPPER -->
  {{/unless}}
  <!-- START PAGE CONTENT WRAPPER -->
  <div class="page-content-wrapper">

		{{outlet}}

		{{#unless isInFullPageRoute}}
	    <!-- START FOOTER -->
	    <div class="container-fluid container-fixed-lg footer">
	      <div class="copyright sm-text-center">
	        <p class="small no-margin pull-left sm-pull-reset">
	          <span class="hint-text">Copyright Â© 2016</span>
	          <span class="font-montserrat">NTT Security</span>.
	          <span class="hint-text">All rights reserved.</span>
	          <span class="sm-block"><a href="#" class="m-l-10 m-r-10">Terms of use</a> | <a href="#" class="m-l-10">Privacy Policy</a></span>
	        </p>
	        <div class="clearfix"></div>
	      </div>
	    </div>
	    <!-- END FOOTER -->
	  {{/unless}}
  </div>
  <!-- END PAGE CONTENT WRAPPER -->
</div>
<!-- END PAGE CONTAINER -->
