<!-- START PAGE CONTENT -->
<div class="content">
{{pg-navbar first="IPs" second="New IP"}}
<div class="container container-fluid">
	<div class="panel panel-transparent">
		<div class="panel-body">
			<form id="form-personal" role="form" autocomplete="off" novalidate="novalidate">

				<div class="row clearfix">
					<div class="col-sm-12">
						<div class="form-group form-group-default form-group-default-select2">
							<label class="">Merchant</label>				
							<select onchange={{action "selectEntity" value="target.value"}} id="entity-select" class="full-width select2-offscreen" data-placeholder="Select Merchant"  tabindex="-1" title="">								
								{{#each model.entities as |entity|}}
									<option value="{{entity.id}}">{{entity.companyName}}</option>
								{{/each}}
							</select>
						</div>
					</div>
				</div>

				<div class="row clearfix">
					<div class="col-sm-12">
						<div class="form-group form-group-default">
							<label>IP Address</label>
				            {{input value=model.assetIp.ipNumber id="ipNumber" type="text" class="form-control" placeholder="IP Address of the host you whis to add (e.g: 91.22.110.7)" required="" aria-required="true" }}            
						</div>
					</div>
				</div>

				<div class="row clearfix">
					<div class="col-sm-12">
						<div class="form-group form-group-default">
							<label>Hostname</label>
				            {{input value=model.assetIp.hostName id="hostname" type="text" class="form-control" placeholder="Hostname of the host you whis to add (e.g: LAN02-DB01)" required="" aria-required="true" }}            
						</div>
					</div>
				</div>

				<div class="row clearfix">
					<div class="col-sm-12">
						<div class="form-group form-group-default">
							<label>Tag</label>
				            {{input value=model.assetIp.tag id="tag" type="text" class="form-control" placeholder="Tag of the host you whis to add (e.g: database-1)" required="" aria-required="true" }}            
						</div>
					</div>
				</div>

				<div class="row clearfix">
					<div class="col-sm-12">
						<div class="form-group form-group-default">
							<label>Description</label>
				            {{input value=model.assetIp.description id="description" type="text" class="form-control" placeholder="A brief description of the host you whis to add (e.g: first database server)" required="" aria-required="true" }}            
						</div>
					</div>
				</div>


				<p class="pull-left hint-text p-l-5">
				I agree to the <a href="#">ZeroRisk Terms</a> and <a href="#">Privacy</a>.
				</p>

				<div class="clearfix"></div>
				<button {{action "saveIp"}} class="btn btn-complete pull-right" type="submit">Create IP</button>
			</form>
		</div>
	</div>
</div>

</div>
<!-- END PAGE CONTENT -->