{{#ember-remodal forService=true name='terms-and-conditions'}}
  <header class="modal-header">
    <h1>Terms and Conditions</h1>
  </header>  

  <div class="modal-body padding-0" style="height: 400px;">
    <iframe src="https://s3-eu-west-1.amazonaws.com/advantio-legal/merchants/terms-and-conditions.html" style="border: none; width: 100%; height: 100%;" />
  </div>
  
  {{#if onAgree}}
    <div class="modal-footer">
    	<button {{action "agree"}} class="btn btn-complete">Agree</button>
    	<button {{action "close"}} class="btn transparent no-depth no-border">Cancel</button>
    </div>
  {{/if}}
{{/ember-remodal}}
