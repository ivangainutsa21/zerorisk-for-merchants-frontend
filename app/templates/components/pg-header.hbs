  <div class="header {{if currentUser.hasInvertedNavbar 'header-inverted'}}">
    
    <div class="pull-left full-height visible-sm visible-xs">
        <div class="sm-action-bar">      
          <a href="#" class="btn-link toggle-sidebar needsclick padding-0 p-l-10" data-toggle="sidebar">
            <span class="icon-set menu-hambuger"></span>
          </a>
        </div>
    </div>
  
    
    <div class="pull-left sm-table">
      <div class="header-inner">
        <div class="brand inline p-l-50">
					<a href="{{href-to 'dashboard'}}">
            {{#if currentUser.isIngenico}}
              <img src="/assets/img/ingenico_logo.png" alt="logo" data-src="/assets/img/ingenico_logo.png" data-src-retina="/assets/img/ingenico_logo.png" width="130">
            {{else if currentUser.isPaymentWall}}
              <img src="/assets/img/paymentwall_logo_dark.png" alt="logo" data-src="/assets/img/paymentwall_logo_dark.png" data-src-retina="/assets/img/paymentwall_logo_dark.png" style="margin-left: 15px;" height="20">
            {{else}}
          	  <img src="/assets/img/logo_merchant.png" alt="logo" data-src="/assets/img/logo_merchant.png" data-src-retina="/assets/img/logo_merchant.png" width="130">
            {{/if}}
					</a>
        </div>
        {{notifications-dropdown notifications=notifications}}				
      </div>
    </div>
    <div class="pull-right">
    
      <div class="visible-lg visible-md m-t-10">
        <div class="pull-left p-r-10 fs-16 font-heading" style="padding-top: 9px;">
          <span class="{{if currentUser.hasInvertedNavbar 'text-white hint-text' 'text-master'}}">{{currentUser.fullName}}</span>
        </div>
        <div class="pull-right">
					{{#basic-dropdown horizontalPosition="right" as |dd|}}
            {{#dd.content}}
              <ul role="menu" class="m-b-0" style="width: 150px;">
                {{!--<li class="disabled"><a href="#"><i class="pg-settings_small"></i> Settings</a></li>--}}
                <li {{action "openLanguageSelector"}} class="p-b-5"><a href="#"><i class="fa fa-globe m-r-5"></i> Language</a></li>
                {{!--<li class="p-l-5">
                  <a {{action "openLanguageSelector"}}>
                    <span class="pull-left">Change language</span>
                  </a>
                </li>--}}
                <li class="bg-master-lighter" style="padding: 5px 22px;">
                  <a {{action "logout" target=session}}>
                    <span class="pull-left">Logout</span>
                    <span class="pull-right"><i class="pg-power"></i></span>
                  </a>
                </li>
              </ul>
            {{/dd.content}}
            {{#dd.trigger}}
              <button class="profile-dropdown-toggle" type="button" aria-haspopup="true" aria-expanded="false">
                <span class="fa-stack fa-lg hint-text">
                  <i class="fa fa-circle fa-stack-2x" style="line-height: 36px; font-size: 33px;"></i>
                  <i class="fa fa-user fa-stack-1x fa-inverse" style="font-size: 15px; line-height: 33px;"></i>
                </span>
              </button>
					  {{/dd.trigger}}
          {{/basic-dropdown}}
        </div>
      </div>
      
    </div>
  </div>