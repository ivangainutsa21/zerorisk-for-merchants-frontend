{{!-- currentQuestionId: {{currentQuestionId}}<br>
previousQuestionId: {{previousQuestionId}}<br>
questionIdsHistory: {{#each questionIdsHistory as |a|}}{{a}},{{/each}} --}}

{{#liquid-bind currentQuestion.id class="overflow-visible" as |cq| }}
  <div class="text-wizard-question-container container-fluid container-fixed-lg bg-white p-t-50 p-b-50">
      {{#if currentQuestionHasQuestionMark}}
        <div class="hint-text all-caps fs-10 font-montserrat" style="width: 80%; margin: 0 auto;">Question</div>
      {{/if}}

      <h5 style="width: 80%; margin: 0 auto;">{{{currentQuestion.text}}}</h5>

      {{#if canGoBack}}
        <a {{action 'goBack'}} class="hidden-xs" style="position: absolute; top: 42%;">
          <i class="fa fa-angle-left fa-2x muted" aria-hidden="true"></i>
        </a>
      {{/if}}
  </div>
{{/liquid-bind}}

{{#if answerComponent}}
  <div class="p-t-40 p-b-40" style="background-color: #F7F7F7;">
    {{component answerComponent answers=currentAnswer answer=(action 'answer')}}
  </div>
{{/if}}
