{{#liquid-bind currentQuestion.id class="overflow-visible" as |cq| }}
  <div class="text-wizard-question-container container-fluid container-fixed-lg bg-white p-t-50 p-b-50">
      {{#if currentQuestionHasQuestionMark}}
        <div class="hint-text all-caps fs-12 font-montserrat" style="width: 80%; margin: 0 auto; margin-bottom: 3px;">Question</div>
      {{/if}}
      
      {{#if currentQuestion.text}}
        <h5 class="normal" style="width: 80%; margin: 0 auto;">{{{currentQuestion.text}}}</h5>
        {{#if currentQuestion.info}}
          <div class="hint-text all-caps fs-10 font-montserrat" style="width: 80%; margin: 0 auto; margin-top: 15px; margin-bottom: 3px;">Info</div>
          <div class="fs-13" style="width: 80%; margin: 0 auto;">{{{currentQuestion.info}}}</div>
        {{/if}}
      {{else}}
        {{!--Loading placeholders!--}}
        <div class="bg-master-lightest" style="width 100%;height 35px;margin-bottom 20px;width: 20%;transform: translateX(-74%);height: 12px;margin: auto;"></div>
        <div class="bg-master-lightest" style="width 100%;height 35px;margin-bottom 20px;width: 50%;height: 15px;margin: auto;margin-top: 10px;"></div>
        <div class="bg-master-lightest" style="width 100%;height 35px;margin-bottom 20px;width: 43%;height: 15px;margin: auto;margin-top: 5px;transform: translateX(-8%);"></div>
      {{/if}}

      {{#if canGoBack}}
        <a {{action 'goBack'}} class="hidden-xs" style="position: absolute; top: 42%;">
          <i class="fa fa-angle-left fa-2x muted" aria-hidden="true"></i>
        </a>
      {{/if}}
  </div>
{{/liquid-bind}}

{{#if isLoading}}
  <div class="p-t-40 p-b-40" style="background-color: #F7F7F7;">
    <i class="fa fa-spinner fa-spin fa-3x fa-fw text-master-light" style="margin: auto; display: block;"></i>
    {{!--<div class="text-master hint-text center-text">{{endWizardloadingText}}</div>--}}
  </div>
{{else}}
  {{#if answerComponent}}
    <div class="bg-pic hidden-sm hidden-xs" style="position: absolute; {{if (eq answerComponent 'text-wizard/multiple-answer') ' bottom: 5px;'}}">
      <img src="/assets/img/backgrounds/zerorisk-welcoming-guy.svg" style="opacity: 0.3; height: 200px; top: 5px; position: relative; left: -30px;" />
    </div>
    <div class="p-t-40 p-b-40" style="background-color: #F7F7F7;">
      {{component answerComponent answers=currentAnswer answer=(action 'answer')}}
    </div>
  {{/if}}
{{/if}}