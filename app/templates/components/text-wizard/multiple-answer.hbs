<div style="width: 50%; text-align: center; margin: 0 auto;">
  {{#stagger-set inDirection="up" outDirection="left" inEffect="slideAndFade"}}
    {{#each answers.multiples as |answer|}}
      <button {{action attrs.answer answer.bringsTo answer.id}} class="btn btn-default btn-lg btn-larger btn-block text-left" style="white-space: normal; border-radius: 0;">
        <div>{{{answer.text}}}</div>
        {{#if answer.description}}
        	<span class="hint-text">{{{answer.description}}}</span>
        {{/if}}
      </button>
    {{/each}}
  {{/stagger-set}}
</div>